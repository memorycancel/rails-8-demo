<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1><%= t :posts %></h1>

<div id="posts">
  <% @posts.each do |post| %>
    <% cache post do %>
      <%= render post %>
    <% end %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
